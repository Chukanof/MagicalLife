<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp1.1</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <Compile Update="Creatures.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Creatures.resx</DependentUpon>
    </Compile>
    <Compile Update="Items.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Items.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Creatures.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Creatures.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <EmbeddedResource Update="Items.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Items.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Abilities\" />
    <Folder Include="Classes\" />
    <Folder Include="Creatures\" />
    <Folder Include="Items\" />
    <Folder Include="Other\" />
    <Folder Include="Spells\" />
  </ItemGroup>

</Project>